[Unit]
Description=EggsFM audio streaming server
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
User=eggsfm
Group=eggsfm
WorkingDirectory=/opt/eggsfm
EnvironmentFile=/opt/eggsfm/.env.production
ExecStart=/opt/eggsfm/eggsfm
Restart=on-failure
RestartSec=5
AmbientCapabilities=CAP_NET_BIND_SERVICE
CapabilityBoundingSet=CAP_NET_BIND_SERVICE
NoNewPrivileges=yes

[Install]
WantedBy=multi-user.target
